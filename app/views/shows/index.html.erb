<% if @search_item %>
  <h2 class="Search Result">Search Shows for "<%=@search_item%>"</h2>
<% end %>

<%= link_to "Create a New Show", new_show_path %>
<h2>Show</h2>
  <% @shows.each do |show| %>
    <h1><%= show.title %></h1>
    <%= link_to "Show Details", show_path(show), class: "btn" %>
  <% show.performances.each do |performance|%>
      <section class="performance_div">
        <p>Venue: <%=performance.venue.name%></p>
      <% if performance.start %>
        <p>Date <%=performance.human_readable_start_date%></p>
        <p>Start Time <%=performance.human_readable_start_time%></p>
      <%end%>
    
    </section>
<% end %>
<% end %>